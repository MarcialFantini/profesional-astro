---
import HeaderLink from "./HeaderLink.astro";
import Button from "../components/Button/index.astro";
---

<header class="relative top-0 z-50 shadow-sm bg-sky-700">
  <nav class="flex flex-row items-center px-10 py-4">
    <a href="/"><h2 class="text-2xl font-bold mr-8 text-white">LOGO</h2></a>
    <div class="flex flex-row items-center gap-5">
      <HeaderLink
        class="rounded-md p-2 border-b-2 border-transparent hover:bg-white hover:border-blue-600 hover:text-sky-600 transition-all duration-500 text-white"
        href="/#inicio">Home</HeaderLink
      >
      <HeaderLink
        class="rounded-md p-2 border-b-2 border-transparent hover:bg-white hover:border-blue-600 hover:text-sky-600 transition-all duration-500 text-white"
        href="/#servicios">Our Services</HeaderLink
      >
      <HeaderLink
        class="rounded-md p-2 border-b-2 border-transparent hover:bg-white hover:border-blue-600 hover:text-sky-600 transition-all duration-500 text-white"
        href="/#nosotros">About Us</HeaderLink
      >
      <HeaderLink
        class="rounded-md p-2 border-b-2 border-transparent hover:bg-white hover:border-blue-600 hover:text-sky-600 transition-all duration-500 text-white"
        href="/#contacto">Contact Us</HeaderLink
      >
    </div>
    <div class="ml-auto">
      <a href="/#contacto">
        <Button text="Ask for a quote" />
      </a>
    </div>
  </nav>
</header>
