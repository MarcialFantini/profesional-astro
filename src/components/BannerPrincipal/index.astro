---
import Button from "../Button/index.astro";
import RoomImg from "../../assets/room.jpg";
---

<section data-parallax class="relative w-full h-240 px-10 overflow-hidden">
  <!-- Worker (parallax) -->
  <picture
    id="parallax-worker"
    class="absolute top-0 right-0 w-240 z-10"
    style="will-change: transform;"
  >
    <img
      src="https://png.pngtree.com/png-vector/20240908/ourmid/pngtree-professional-cleaner-with-mop-and-gloves-png-image_13791940.png"
      alt=""
      class="w-full h-auto"
    />
  </picture>

  <!-- Background -->
  <picture class="absolute w-full h-full top-0 left-0 z-0 brightness-50">
  <img class="w-full h-full object-cover" src={RoomImg.src} alt="" />
</picture>

<div class="absolute bottom-0 left-0 w-full h-1/3 bg-linear-to-t from-sky-700 to-transparent z-10"></div>


  <!-- Gradient -->

  <!-- Text -->
  <article
    class="absolute max-w-[60%] flex flex-col items-start h-full gap-8 justify-center z-20"
  >
    <h1 class="text-[64px] font-bold text-white flex flex-col m-0">
      Professional Services <span>for your home</span>
    </h1>
    <p class="text-[32px] text-white m-0">
      Limpieza, construccion y carpinteria de confianza para hogares y empresas.
    </p>
    <Button text="Ask for a quote" />
    <p class="text-white text-[32px] m-0">All Services â†’</p>
  </article>
</section>
